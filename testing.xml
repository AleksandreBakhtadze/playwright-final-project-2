<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="TBC Digital Automation Suite" thread-count="6" verbose="1">

    <!--CHROME -->
    <test name="Desktop-Chrome" parallel="classes" thread-count="2">
        <parameter name="browserType" value="chrome"/>
        <classes>
            <class name="ge.tbc.testautomation.tests.ContentIntegrityTests"/>
            <class name="ge.tbc.testautomation.tests.LocationsFiltersTests"/>
            <class name="ge.tbc.testautomation.tests.LocationsMapTests"/>
            <class name="ge.tbc.testautomation.tests.ProductDetailsTests"/>
        </classes>
    </test>

    <!--FIREFOX -->
    <test name="Desktop-Firefox" parallel="classes" thread-count="2">
        <parameter name="browserType" value="firefox"/>
        <classes>
            <class name="ge.tbc.testautomation.tests.ContentIntegrityTests"/>
            <class name="ge.tbc.testautomation.tests.LocationsFiltersTests"/>
            <class name="ge.tbc.testautomation.tests.LocationsMapTests"/>
            <class name="ge.tbc.testautomation.tests.ProductDetailsTests"/>
        </classes>
    </test>

    <!-- WEBKIT -->
    <test name="Desktop-WebKit" parallel="classes" thread-count="2">
        <parameter name="browserType" value="webkit"/>
        <classes>
            <class name="ge.tbc.testautomation.tests.ContentIntegrityTests"/>
            <class name="ge.tbc.testautomation.tests.LocationsFiltersTests"/>
            <class name="ge.tbc.testautomation.tests.LocationsMapTests"/>
            <class name="ge.tbc.testautomation.tests.ProductDetailsTests"/>
        </classes>
    </test>

    <!-- MOBILE TESTS - CHROME MOBILE EMULATION -->
    <test name="Mobile-Chrome" parallel="false">
        <parameter name="browserType" value="chrome"/>
        <classes>
            <class name="ge.tbc.testautomation.tests.MobileSpecificTests"/>
        </classes>
    </test>

</suite>
